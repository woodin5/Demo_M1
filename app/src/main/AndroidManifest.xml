<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wmz.test">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CalculatorActivity"
            android:label="@string/title_activity_calculator"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".XListViewActivity"
            android:label="@string/XListView"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="LIST" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AnimActivity"
            android:label="@string/Animation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="LIST" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListItemOperateActivity"
            android:label="@string/ListItemOperate">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="LIST" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RedDotActivity"
            android:label="@string/RedDot">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="LIST" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SuperTextViewActivity"
            android:label="@string/SuperTextView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="LIST"/>
            </intent-filter>
        </activity>
    </application>

</manifest>